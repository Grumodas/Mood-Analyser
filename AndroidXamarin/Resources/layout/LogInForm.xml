
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">
    <GridLayout
        android:id="@+id/login_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon">
        <Button
            android:text="Settings"
            android:id="@+id/login_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"/>
        <TextView
            android:text="Log In"
            android:id="@+id/login_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="User"
            android:id="@+id/login_blank"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/myJet"
            android:textColor="@color/myWhite"
            android:visibility="invisible" />
    </GridLayout>
    <Button
        android:text="Add User"
        android:id="@+id/login_add"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/roundstylejet"
        android:textColor="@color/myWhite"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <TextView
        android:text="Or"
        android:id="@+id/login_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="6dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingBottom="0dp" 
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="15sp"
    />
    <TextView
        android:text="Select Exsisting"
        android:id="@+id/login_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:paddingTop="1dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp" 
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <ListView
        android:id="@+id/login_list"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myWhite" />

</LinearLayout>