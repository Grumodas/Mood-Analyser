
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">
    <TextView
        android:text="Date"
        android:id="@+id/history_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:paddingLeft="4dp"
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="18sp"/>
    <TextView
        android:text="Event"
        android:id="@+id/history_item_event"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="4dp"
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <TextView
        android:text="Mood"
        android:id="@+id/history_item_mood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:paddingLeft="4dp"
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="20sp"/>
    <!--Don't know how to use photo from DB-->
    <ImageView
        android:id="@+id/history_item_photo"
        android:src="@drawable/jim1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"/>
    <TextView
        android:id="@+id/history_item_line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myWenge"
        android:height="1dp"
        android:layout_marginTop="5dp" />

</LinearLayout>