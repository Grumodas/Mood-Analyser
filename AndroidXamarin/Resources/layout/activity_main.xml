<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical"
    android:background="@color/myWhite">

     <GridLayout
        android:id="@+id/add_ref_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon">
        <Button
            android:text="Settings"
            android:id="@+id/add_ref_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"/>
        <TextView
            android:text="Profile Picture"
            android:id="@+id/add_ref_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="User"
            android:id="@+id/add_ref_user"
            android:radius="25dp"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite" />
    </GridLayout>


    <GridLayout
        android:id="@+id/add_ref_content_view"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="4"
        android:background="@color/myWhite">
    
        <Button
        android:text="Upload A Photo"
        android:id="@+id/add_ref_upload"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:background="@drawable/roundstylejet"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

        <TextView
        android:text="Photo must contain only Your face"
        android:id="@+id/add_ref_msg"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:textColor="@color/myBlack"
        android:textSize="15sp" />

        <ImageView
        android:id="@+id/add_ref_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:maxHeight="200dp" />  

        <Button
        android:text="Confirm"
        android:id="@+id/add_ref_confirm"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/roundstylesalad"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="bold" />
        
    </GridLayout>
