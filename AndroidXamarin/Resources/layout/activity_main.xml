<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:rowCount="4"
    android:columnCount="2"
    android:orientation="vertical">

    <TextView
        android:text="Hello. \nPlease upload a photo with ONLY you in it."
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="15dp"
        android:id="@+id/text1"
        android:layout_marginRight="70.0dp" 
        android:layout_marginLeft="70.0dp"/>

    <Button
        android:text="Upload a photo!"
        android:id="@+id/UploadRefPhotoButton"
        android:width="135dp"
        android:height="70dp"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_marginLeft="130dp"/>
        
    <ImageView 
    android:id="@+id/selectedPhotoView"
    android:layout_width="wrap_content" 
    android:layout_row="2"
    android:layout_height="wrap_content"/>   

    <Button
    android:text="Confirm"
    android:id="@+id/confirmButton"
    android:width="135dp"
    android:height="70dp"
    android:layout_row="3"
    android:layout_column="0"
    android:visibility="gone"
    android:layout_marginLeft="130dp"/>
</GridLayout>
