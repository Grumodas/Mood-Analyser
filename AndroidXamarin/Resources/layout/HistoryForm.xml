
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">
    <GridLayout
        android:id="@+id/history_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon">
        <Button
            android:text="Settings"
            android:id="@+id/history_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            android:visibility="invisible" />
        <TextView
            android:text="History"
            android:id="@+id/history_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="Clear"
            android:id="@+id/history_clear"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            android:visibility="invisible"/>
    </GridLayout>

    <Button
        android:text="Filter"
        android:id="@+id/history_filter"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:minHeight="20dp"
        android:minWidth="40dp"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/roundstylejet"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ListView
        android:id="@+id/history_list"
        android:minWidth="25dp"
        android:minHeight="25dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/myWhite" />
</LinearLayout>