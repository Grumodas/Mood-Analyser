
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    
    android:orientation="vertical">
    <GridLayout
        android:id="@+id/login_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon">
        <Button
            android:text="Settings"
            android:id="@+id/login_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"/>
        <TextView
            android:text="Log In"
            android:id="@+id/login_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="User"
            android:id="@+id/login_blank"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/myJet"
            android:textColor="@color/myWhite" />
    </GridLayout>
    <!--
    <EditText
    android:id="@+id/edittext"
    android:layout_width="match_parent"
    android:imeOptions="actionGo"
    android:layout_height="wrap_content" 
    android:visibility="gone" />
    -->

    <GridLayout
        android:id="@+id/login_header_view2"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="5"
        android:background="@color/myWhite">
        <Button
        android:text="Upload A Photo"
        android:id="@+id/uploadPhotoButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="2dp"
        android:padding="10dp"
        android:background="@drawable/roundstylejet"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="bold" />
        
        <ImageView 
        android:id="@+id/selectedPhotoView"
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:adjustViewBounds="true" 
            android:layout_rowWeight="3"
        android:src="@drawable/jim1"/>  

        <Button
        android:text="Confirm"
        android:id="@+id/confirmButton"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="15dp"
        android:padding="10dp"
        android:background="@drawable/roundstylesalad"
        android:textColor="@color/myWhite"
        android:textSize="20sp"
        android:textStyle="bold" 
        android:visibility="invisible" />
    </GridLayout>

</LinearLayout>