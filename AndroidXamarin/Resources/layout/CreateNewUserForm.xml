<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite">
    <GridLayout
        android:id="@+id/create_user_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon" 
        >
        <Button
            android:text="Settings"
            android:id="@+id/create_user_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp" 
            android:visibility="invisible"/>
        <TextView
            android:text="Log In"
            android:id="@+id/create_user_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="User"
            android:id="@+id/create_user_blank"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@color/myJet"
            android:textColor="@color/myWhite"
            android:visibility="invisible" />
    </GridLayout>
    <TextView
        android:text="Username Alreadey Taken"
        android:id="@+id/create_user_warning"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:padding="10dp"
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="20sp"
        android:visibility="invisible" 
        />
    <EditText
        android:text="Username"
        android:id="@+id/create_user_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="120dp"
        android:padding="10dp"
        android:textColor="@color/myBlack"
        android:textStyle="bold"
        android:textSize="20sp"
    />
    <Button
        android:text="Add"
        android:id="@+id/create_user_confirm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:background="@drawable/roundstylejet"
        android:textColor="@color/myWhite"
        android:textStyle="bold"
        android:textSize="20sp"
         />

</LinearLayout>
