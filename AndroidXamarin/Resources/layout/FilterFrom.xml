
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/myWhite" >
    <GridLayout
        android:id="@+id/filter_header_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="4"
        android:rowCount="1"
        android:background="@color/mySalmon">
        <Button
            android:text="Settings"
            android:id="@+id/filter_settings"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            android:visibility="invisible"/>
        <TextView
            android:text="Filters"
            android:id="@+id/filter_window_name"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_columnWeight="2"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold" />
        <Button
            android:text="User"
            android:id="@+id/filter_user"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/roundstylejet"
            android:textColor="@color/myWhite"
            android:textSize="18sp"
            android:visibility="invisible"/>
    </GridLayout>

    <GridLayout
        android:id="@+id/filter_options_view"
        android:orientation="horizontal"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="1"
        android:rowCount="11"
        android:background="@color/myWhite">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="3dp"
            android:layout_rowWeight="9"
            android:background="@color/myWhite">
            <RadioGroup
                android:id="@+id/filter_radio_group"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:text="Angry"
                    android:id="@+id/filter_angry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Calm"
                    android:id="@+id/filter_calm"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Confused"
                    android:id="@+id/filter_confused"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Disgusted"
                    android:id="@+id/filter_disgusted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Happy"
                    android:id="@+id/filter_happy"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Sad"
                    android:id="@+id/filter_sad"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Scared"
                    android:id="@+id/filter_scared"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="Surprised"
                    android:id="@+id/filter_surprised"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"
            />
                <RadioButton
                    android:text="None"
                    android:id="@+id/filter_none"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minWidth="25dp"
                    android:minHeight="25dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="1dp"
                    android:layout_marginBottom="1dp"
                    android:padding="9dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:textColor="@color/myWhite"
                    android:background="@drawable/roundstylejet"
                    android:textSize="18sp"
                    android:textStyle="bold"/>
            </RadioGroup>
        </LinearLayout>

        <Button
            android:text="Confirm"
            android:id="@+id/filter_confirm"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="15dp"
            android:padding="10dp"
            android:layout_rowWeight="1"
            android:background="@drawable/roundstylesalad"
            android:textColor="@color/myWhite"
            android:textSize="20sp"
            android:textStyle="bold"
        />
    </GridLayout>


</LinearLayout>